{% extends('::admin.html.twig') %}

{% block body %}

	<div class="row-fluid">
		<div class="span12">
			{% for flashMessage in app.session.flashbag.get('info') %}
			    <div class="alert alert-info">
			    	<button class="close" data-dismiss="alert" type="button">Ã—</button>
			        <strong>Notice</strong> 
			        {{ flashMessage }}
			    </div>
			{% endfor %}
			<table class="table table-striped table-bordered table-hover">
	            <thead>
	                <tr>
	                  	<th>
	                  		<h1 class="well no-margin">
	                  			Category Manager
	                  		</h1>
	                  	</th>
	                </tr>
	            </thead>
	        </table>
			<a href="{{ path('categories_new') }}" class="btn btn-primary btn-small pull-right"><i class="icon icon-plus-sign icon-white"></i> New</a>

		    <div class="clear h20"></div>

			<table class="table table-striped table-bordered table-hover">
	   			<thead>
			        <tr>
		                <th class="center-text">#</th>
			            <th class="center-text">Title</th>
			            <th class="center-text">Description</th>
			            <th class="center-text">Actions</th>
			        </tr>
			    </thead>
			    <tbody>
			    {% for category in categories %}
			        <tr>
			            <td class="center-text">{{ category.id }}</td>
			            <td class="center-text"><a href="{{ path('categories_edit', { 'id': category.id }) }}">{{ category.title }}</a></td>
			            <td class="center-text">{{ category.description }}</td>
			            <td class="center-text">
			                <a href="{{ path('categories_edit', { 'id': category.id }) }}"><i class="icon-pencil"></i></a>

			                <a class="space-left" href="{{ path('categories_delete', { 'id': category.id }) }}"><i class="icon-trash"></i></a>
			            </td>
			        </tr>
			    {% endfor %}
			    </tbody>
			</table>
	    </div>
	</div>

{% endblock body %}
